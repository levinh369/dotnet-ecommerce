@model List<ProjectTest1.ViewModels.VoucherViewModel>
@using ProjectTest1.Enums

<!-- 🔹 Hiển thị điểm -->
<div class="alert alert-light border-primary mb-4 rounded-pill px-4 py-2 shadow-sm d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
        <span class="fs-5 me-2 text-warning">⭐</span>
        <span class="fw-semibold text-dark">Điểm hiện có:</span>
        <span class="fw-bold text-primary ms-2">@ViewBag.TotalPoints</span>
    </div>
    <small class="text-muted fst-italic">
        Mua hàng để tích thêm điểm 🎁
    </small>
</div>

<!-- 🔹 Danh sách voucher -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var v in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm h-100 rounded-4 hover-shadow-sm transition-all">
                    <div class="card-body d-flex flex-column p-4">

                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">@v.Code</small>
                            <span class="badge bg-light text-primary fw-semibold">
                                @(v.Type == VoucherType.Public ? "Công khai" :
                                                        v.Type == VoucherType.Loyalty ? "Đổi điểm" : "Khác")
                    </span>
                </div>

                        <h5 class="card-title fw-bold text-dark">@v.Name</h5>

                @if (!string.IsNullOrEmpty(v.Description))
                        {
                            <p class="text-secondary small mb-3 text-truncate-2">@v.Description</p>
                        }

                        <!-- Nội dung chi tiết -->
                        <ul class="list-unstyled small mb-4">
                            @if (v.DiscountType == DiscountType.Fixed)
                            {
                                <li>💰 <strong>Giảm:</strong> @($"{v.DiscountValue:N0}₫")</li>
                            }
                            else if (v.DiscountType == DiscountType.Percent)
                            {
                                <li>💸 <strong>Giảm:</strong> @($"{v.DiscountValue}%")</li>
                            }

                            @if (v.MinOrderValue > 0)
                            {
                                <li>🛒 <strong>Đơn tối thiểu:</strong> @($"{v.MinOrderValue:N0}₫")</li>
                            }

                            <li>📦 <strong>Còn lại:</strong> @(v.UsageLimit - v.UsedCount)</li>
                            <li>
                                ⏰ <strong>Hiệu lực:</strong>
                                @(v.StartDate?.ToString("dd/MM/yyyy") ?? "—") - @(v.EndDate?.ToString("dd/MM/yyyy") ?? "—")
                            </li>
                        </ul>

                        <!-- Nút hành động -->
                        <div class="mt-auto d-flex gap-2">
                            @if (v.Type == VoucherType.Public)
                            {
                                @if (v.UserClaimedCount >= v.MaxPerUser)
                                {
                                    <button class="btn btn-sm btn-secondary w-50 rounded-pill shadow-sm" disabled>
                                        🎁 Đã nhận
                                    </button>
                                }
                                else
                                {
                                    <button onclick="voucherUser.getVoucherByUser(@v.Id)"
                                            class="btn btn-sm btn-success w-50 rounded-pill shadow-sm fw-bold text-white">
                                        🎁 Nhận
                                    </button>
                                }
                            }
                            else if (v.Type == VoucherType.Loyalty)
                            {
                                @if (v.UserClaimedCount >= v.MaxPerUser)
                                {
                                    <button class="btn btn-sm btn-secondary w-50 rounded-pill shadow-sm" disabled>
                                        ⭐ Đã đổi
                                    </button>
                                }
                                else
                                {
                                    @if (@ViewBag.TotalPoints >= v.PointCost)
                                    {
                                        <button onclick="voucherUser.changeVoucherPoint(@v.Id)"
                                                class="btn btn-sm btn-outline-warning w-50 rounded-pill shadow-sm fw-semibold text-dark border-2"
                                                title="Nhấn để đổi voucher bằng điểm của bạn">
                                            ⭐ Đổi điểm
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary w-50 rounded-pill shadow-sm fw-semibold text-dark border-2"
                                                disabled
                                                style="pointer-events: auto;"
                                                title="Bạn không đủ điểm để đổi voucher này">
                                            ⭐ Đổi điểm
                                        </button>
                                    }

                                }
                            }
                            else
                            {
                                <button class="btn btn-sm btn-primary w-50 rounded-pill shadow-sm fw-bold text-white">
                                    🎟️ Nhận
                                </button>
                            }

                            <button class="btn btn-sm btn-outline-primary w-50 rounded-pill shadow-sm fw-semibold" onclick="voucherUser.openDetailModal(@v.Id)">
                                👁️ Xem
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5 text-muted">
            😢 Không có voucher nào khả dụng.
        </div>
    }
</div>

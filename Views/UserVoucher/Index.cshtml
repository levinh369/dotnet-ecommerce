@{
    ViewData["Title"] = "Danh sách voucher";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">🎟️ Danh sách Voucher</h2>

        <!-- Hiển thị điểm hiện có -->
    </div>

    <!-- Banner -->
    <div class="bg-gradient bg-primary text-white py-4 text-center rounded-3 shadow-sm mt-3 mb-5">
        <h3 class="fw-bold mb-2">🎉 Ưu đãi cực hot tháng 10!</h3>
        <p class="mb-3 fs-5">
            Săn ngay <strong>Voucher giảm đến 50%</strong> – số lượng có hạn!
        </p>
        <a href="#voucherList" class="btn btn-light fw-bold px-4 py-2 rounded-pill shadow-sm">
            🔍 Khám phá ngay
        </a>
    </div>

    <!-- Danh sách voucher load qua Ajax -->
    <div id="voucherList" class="mt-3">
        <div class="text-center text-muted py-5">⏳ Đang tải voucher...</div>
    </div>
</div> 
<div id="modal-placeholder-voucher"></div>

@section Scripts {
    <script src="~/js/UserVoucher.js"></script>
    <script>
        $(document).ready(function () {
            voucherUser.loadData(); // Gọi hàm load partial khi trang load
        });
    </script>
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý người dùng";
}

<h2 class="mb-4">Quản lý người dùng</h2>

<!-- Form tìm kiếm được bao trong thẻ card -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <strong>Bộ lọc tìm kiếm</strong>
    </div>

    <div class="card-body">
        <form id="searchForm" class="row g-2 align-items-end">
            <!-- Họ và tên -->
            <div class="col-md-2">
                <label for="FullName" class="form-label fs-6">Họ và tên</label>
                <input type="text" class="form-control form-control-sm" id="FullName" name="FullName" placeholder="Nhập tên..." />
            </div>

            <!-- Trạng thái -->
            <div class="col-md-2">
                <label for="Status" class="form-label fs-6">Trạng thái</label>
                <select class="form-select form-select-sm" id="Status" name="Status">
                    <option value="">-- Tất cả --</option>
                    <option value="1">Đang hoạt động</option>
                    <option value="2">Vô hiệu</option>
                </select>
            </div>

            <!-- Từ ngày -->
            <div class="col-md-2">
                <label for="FromDate" class="form-label fs-6">Từ ngày</label>
                <input type="date" class="form-control form-control-sm" id="FromDate" name="FromDate" />
            </div>

            <!-- Đến ngày -->
            <div class="col-md-2">
                <label for="ToDate" class="form-label fs-6">Đến ngày</label>
                <input type="date" class="form-control form-control-sm" id="ToDate" name="ToDate" />
            </div>

            <!-- Nút hành động - cùng dòng -->
            <div class="col-md-4">
                <div class="d-flex justify-content-end gap-1">
                    <button type="button" id="btnSearch" onclick="user.loadData()" class="btn btn-primary w-100 rounded-3 shadow-sm">
                        🔍
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnReset" title="Làm mới">
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>
                    <a onclick="user.loadData(1,false)" class="btn btn-outline-danger btn-sm" title="Phục hồi người dùng">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div id="userList" class="mt-3"></div>

<!-- 🪟 MODAL PLACEHOLDER -->
<div id="modal-placeholder-user"></div>

@section Scripts {
    <script src="~/js/User.js"></script>
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý bình luận";
}

<div class="container mt-4">
    <h4>Quản lý bình luận sản phẩm</h4>
    <hr />

    <form id="filterForm" class="row g-3 mb-3 align-items-end">
        <!-- Từ khóa: tên người dùng hoặc nội dung bình luận -->
        <div class="col-md-5">
            <label class="form-label small">Từ khóa</label>
            <input type="text" class="form-control" name="keyword" placeholder="Tên người dùng hoặc nội dung..." />
        </div>

        <!-- Trạng thái hiển thị -->
        <div class="col-md-2">
            <label class="form-label small">Trạng thái hiển thị</label>
            <select class="form-select" name="status">
                <option value="0">Tất cả</option>
                <option value="1">Hiển thị</option>
                <option value="2">Đã ẩn</option>
            </select>
        </div>

        <!-- Trạng thái phản hồi -->
        <div class="col-md-2">
            <label class="form-label small">Trạng thái phản hồi</label>
            <select class="form-select" name="replyStatus">
                <option value="0">Tất cả</option>
                <option value="1">Đã reply</option>
                <option value="2">Chưa reply</option>
            </select>
        </div>
       

        <!-- Nút lọc & reset -->
        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Lọc</button>
            <button type="button" class="btn btn-outline-secondary w-100" id="resetFilter">Reset</button>
        </div>
    </form>
    <div id="commentList" class="mt-3 text-center">
        <p class="text-muted">Đang tải dữ liệu...</p>
    </div>
</div>
@section Scripts {
    <script src="~/js/AdminReview.js"></script>
}
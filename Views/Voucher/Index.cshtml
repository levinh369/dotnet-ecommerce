@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý mã giảm giá";
}

<div id="voucher-section" class="container py-4">

    <!-- 🧭 TIÊU ĐỀ & NÚT THÊM -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">🎟️ Quản lý Voucher</h2>
            <p class="text-muted mb-0 small">Quản lý mã giảm giá, tìm kiếm và lọc nhanh theo nhiều tiêu chí.</p>
        </div>
        <button id="btnAddVoucher" onclick="voucher.openCreateModal()" class="btn btn-success shadow-sm px-3 rounded-3">
            <i class="bi bi-plus-circle me-1"></i> Thêm voucher mới
        </button>
    </div>

    <!-- 🔍 FORM TÌM KIẾM -->
    <div class="card border-0 shadow-sm mb-4 rounded-4">
        <div class="card-body bg-light rounded-4">
            <form id="searchVoucherForm" class="row g-3 align-items-end">
                <div class="col-lg-3 col-md-6">
                    <label class="form-label fw-semibold text-secondary">Tên hoặc mã</label>
                    <input type="text" name="keySearch" id="searchKeyword" class="form-control rounded-3" placeholder="Nhập tên hoặc mã voucher...">
                </div>

                <div class="col-lg-2 col-md-4">
                    <label class="form-label fw-semibold text-secondary">Trạng thái</label>
                    <select id="searchStatus" name="status" class="form-select rounded-3">
                        <option value="">-- Tất cả --</option>
                        <option value="0">Nháp</option>
                        <option value="1">Đang hoạt động</option>
                        <option value="2">Ngưng hoạt động</option>
                        <option value="3">Hết hạn</option>
                        <option value="4">Đã hết lượt</option>
                        <option value="5">Đã xóa</option>
                    </select>

                </div>

                <div class="col-lg-2 col-md-4">
                    <label class="form-label fw-semibold text-secondary">Kiểu giảm giá</label>
                    <select id="searchDiscountType" name="typeDiscount" class="form-select rounded-3">
                        <option value="">-- Tất cả --</option>
                        <option value="0">Giảm cố định (₫)</option>
                        <option value="1">Giảm theo %</option>
                    </select>
                </div>

                <div class="col-lg-2 col-md-4">
                    <label class="form-label fw-semibold text-secondary">Từ ngày</label>
                    <input type="date" name="fromDate" id="searchStartDate" class="form-control rounded-3">
                </div>

                <div class="col-lg-2 col-md-4">
                    <label class="form-label fw-semibold text-secondary">Đến ngày</label>
                    <input type="date" name="toDate" id="searchEndDate" class="form-control rounded-3">
                </div>

                <div class="col-lg-1 col-md-4 text-end">
                    <button type="button" id="btnSearch" onclick="voucher.loadData()" class="btn btn-primary w-100 rounded-3 shadow-sm">
                        🔍
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 📋 DANH SÁCH VOUCHER -->
    <div id="voucherList" class="mt-3">
       
    </div>

    <!-- 🪟 MODAL PLACEHOLDER -->
    <div id="modal-placeholder-voucher"></div>

</div>

@section Scripts {
    <script src="~/js/Voucher.js"></script>
}

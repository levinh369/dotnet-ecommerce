@using ProjectTest1.Enums
@model ProjectTest1.ViewModels.VoucherViewModel
@{
    Layout = null;   // ❗ Rất quan trọng
}
<!-- Modal thêm voucher -->
<div class="modal fade" id="addVoucherModal" tabindex="-1" aria-labelledby="addVoucherModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header bg-success text-white rounded-top-4">
                <h5 class="modal-title fw-bold" id="addVoucherModalLabel">➕ Thêm Voucher Mới</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addVoucherForm" novalidate enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Mã voucher</label>
                            <input asp-for="Code" class="form-control" placeholder="Nhập mã voucher..." required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Tên voucher</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên voucher..." required />
                        </div>

                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="2" placeholder="Mô tả ngắn về voucher..."></textarea>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Loại Voucher</label>
                            <select asp-for="Type" class="form-select" id="Type">
                                <option value="">-- Chọn loại --</option>
                                @foreach (var type in Enum.GetValues(typeof(VoucherType)))
                                {
                                    <option value="@((int)type)">@type</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4" id="pointCostContainer" style="display:none;">
                            <label class="form-label fw-semibold">Điểm cần đổi</label>
                            <input asp-for="PointCost" class="form-control" type="number" min="0" placeholder="Nhập số điểm..." />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Kiểu giảm giá</label>
                            <select asp-for="DiscountType" class="form-select">
                                <option value="">-- Chọn kiểu giảm --</option>
                                @foreach (var d in Enum.GetValues(typeof(DiscountType)))
                                {
                                    <option value="@d">@d</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="">-- Chọn trạng thái --</option>
                                @foreach (var s in Enum.GetValues(typeof(VoucherStatus)))
                                {
                                    <option value="@s">@s</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Giá trị giảm</label>
                            <input asp-for="DiscountValue" class="form-control" type="number" min="0" step="0.01" placeholder="VD: 10 hoặc 100000" required />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Đơn tối thiểu</label>
                            <input asp-for="MinOrderValue" class="form-control" type="number" min="0" placeholder="VD: 500000" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Giới hạn sử dụng</label>
                            <input asp-for="UsageLimit" class="form-control" type="number" min="1" placeholder="VD: 100" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Giới hạn mỗi người dùng</label>
                            <input asp-for="MaxPerUser" class="form-control" type="number" min="1" placeholder="VD: 1" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Ngày bắt đầu</label>
                            <input asp-for="StartDate" class="form-control" type="date" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Ngày kết thúc</label>
                            <input asp-for="EndDate" class="form-control" type="date" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success fw-bold">
                        💾 Lưu Voucher
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

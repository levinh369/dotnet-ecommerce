
@using ProjectTest1.Enums
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Quản lý đơn hàng</h2>

<form id="filterForm" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="keySearch" value="@ViewBag.SearchString"
               class="form-control" placeholder="Tìm kiếm theo tên KH hoặc mã đơn..." />
    </div>
    <div class="col-md-3">
        <select name="status" class="form-select">
            <option value="">-- Tất cả trạng thái --</option>
            @foreach (var status in Enum.GetValues(typeof(StatusOrderEnum)))
            {
                <option value="@( (int)status )" selected="@(ViewBag.SelectedStatus == (StatusOrderEnum)status)">
                    @status
                </option>

            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Lọc</button>
    </div>
</form>
<div class="table-responsive shadow-sm border rounded" id="gridData">
    <!-- Dữ liệu sẽ được load bằng Ajax -->
</div>
@* <div id="modal-placeholder"></div> *@
@section Scripts {
    <script src="~/js/Order.js"></script>
}

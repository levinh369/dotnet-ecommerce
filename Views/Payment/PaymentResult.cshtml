@{
    Layout = null;
    var status = TempData["PaymentStatus"] as string;
    var message = TempData["Message"] as string;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Kết quả thanh toán</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    @if (!string.IsNullOrEmpty(status))
    {
        <script>
            Swal.fire({
                icon: '@status',
                title: '@(status == "success" ? "Thanh toán thành công!" : "Lỗi thanh toán")',
                text: @Html.Raw(Json.Serialize(message)), // ✅ giữ nguyên dấu tiếng Việt
                timer: 3000,
                timerProgressBar: true,
                showConfirmButton: false
            }).then(function() {
                window.location.href = '/';
            });

            setTimeout(function() {
                window.location.href = '/';
            }, 3000);
        </script>
    }
    else
    {
        <h2>Không tìm thấy thông tin thanh toán.</h2>
    }

</body>
</html>

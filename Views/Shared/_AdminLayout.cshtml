@{
    Layout = null; // Layout riêng cho admin
}
<!DOCTYPE html>
<style>
    .content {
        padding: 20px;
    }

    .card {
        background-color: #ecf0f1;
        border: none;
        text-align: center;
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .nav-tabs .nav-link.active {
        background-color: #3498db;
        color: white;
    }

    .notification {
        position: fixed;
        top: 70px;
        right: 20px;
        background-color: #2ecc71;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        animation: fadeIn 0.5s, fadeOut 0.5s 3s forwards;
    }

    .hidden {
        display: none;
    }
    .chat-window {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 380px;
        height: 400px;
        display: none;
        flex-direction: column;
        border-radius: 10px;
        background: #fff;
        overflow: hidden;
        z-index: 1050;
        margin-bottom: 20px;
    }

    .chat-messages {
        flex: 1;
        overflow-y: auto;
        background: #f8f9fa;
        padding: 8px;
    }

    .chat-message {
        position: relative;
        padding: 6px 10px;
        margin: 4px 13px 20px 13px; /* 👈 chừa khoảng dưới cho time */
        border-radius: 8px;
        word-wrap: break-word;
        max-width: 80%;
        clear: both;
        overflow: visible; /* để phần tử con có thể tràn ra ngoài */
    }

        .chat-message.admin {
            background-color: #d4f1ff;
            float: right;
            text-align: right;
            text-align: right;
        }

        .chat-message.buyer {
            background-color: #e9ecef;
            float: left;
            text-align: left;
        }

    .message-time {
        position: absolute;
        bottom: -18px; /* 👈 nằm dưới bubble */
        left: auto;
        right: auto;
        background: rgba(0, 0, 0, 0.75);
        color: #fff;
        font-size: 0.7rem;
        padding: 2px 5px;
        border-radius: 4px;
        display: none; /* mặc định ẩn */
        white-space: nowrap;
        z-index: 9999; /* 👈 đảm bảo luôn nổi trên bubble */
    }

    .chat-message.admin .message-time {
        right: 0; /* căn trái cho admin */
    }

    .chat-message.buyer .message-time {
        left: 0; /* căn phải cho buyer */
    }

    .chat-message:hover .message-time {
        display: block; /* hover bubble thì hiện time */
    }


    .message-actions {
        position: absolute;
        top: 4px;
        right: -20px;
    }


    .chat-message:hover .message-time {
        display: block;
    }

    .chat-product {
        clear: both; /* ép nó xuống dưới cùng */
    }

        .chat-product strong {
            display: block; /* hoặc inline-block */
            white-space: nowrap; /* không xuống dòng */
            overflow: hidden; /* ẩn phần dư */
            text-overflow: ellipsis; /* thay bằng ... */
            max-width: 190px; /* giới hạn độ rộng */
        }

    .message-reply {
        background-color: #f0f0f0; /* màu nền nhạt */
        padding: 6px 10px;
        border-radius: 6px;
        margin-bottom: 4px;
        font-size: 0.85em;
        color: #555;
    }

    .reply-author {
        font-weight: 500;
        display: block;
        margin-bottom: 2px;
        color: #888;
    }

    .reply-content {
        color: #333;
    }
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeOut {
        to {
            opacity: 0;
        }
    }

    
</style>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quản lý</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/nouislider@15.7.1/dist/nouislider.min.css" rel="stylesheet">
    <link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-2 bg-dark text-white vh-100 p-3">
                <h5 class="mb-4">Admin Menu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Admin">Dash broad</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Order">Quản lý Đơn hàng</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Product">Quản lý Sản phẩm</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Review">Quản lý Bình luận</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/User">Quản lý Người dùng</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Voucher">Quản lý Mã Khuyến Mại</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Category">Quản lý Danh Mục</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/admin/dashbroad">Báo cáo thống kê</a>
                    </li>
                </ul>
            </div>

            <!-- Content -->
            <div class="col-10 p-4">
                <!-- Nút chuông -->
                <div class="d-flex justify-content-end gap-2 mb-3">
                    <!-- Nút chuông -->
                    <!-- Nút chuông -->
                    <div class="dropdown">
                        <button class="btn btn-light rounded-circle position-relative d-flex align-items-center justify-content-center"
                                id="notifBell"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                                onclick="admin.Notification()"
                                style="width:50px; height:50px;">
                            <i class="bi bi-bell fs-5"></i>
                            <span id="notifCount"
                                  class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                0
                            </span>
                        </button>
                        @* <div id="notification" class="dropdown-menu p-2 shadow" style="display:none;">
                            <p class="text-muted mb-0">Không có thông báo nào.</p>
                        </div> *@
                        <!-- 👇 phải có menu -->
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notifDropdown">
                            <li><h6 class="dropdown-header">Thông báo</h6></li>
                            <li><a class="dropdown-item" href="#">Không có thông báo mới</a></li>
                        </ul>
                    </div>


                    <!-- Nút chat -->
                    <button id="chat-toggle-btn"
                            class="btn btn-primary rounded-circle shadow position-relative d-flex align-items-center justify-content-center"
                            style="width:50px; height:50px;"
                            onclick="chat.listChatUser()">
                        <i class="bi bi-chat-dots fs-5"></i>

                        <!-- Badge hiển thị số tin nhắn chưa đọc -->
                        <span id="readCount"
                              class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            0
                        </span>
                    </button>

                   
                </div>
                <div id="globalLoading" class="text-center mb-3"
                     style="display: none; position: fixed; top: 40%; left: 50%;
                    transform: translate(-50%, -50%);
                    z-index: 9999999; /* tăng cao hơn tất cả */
                    pointer-events: none; /* để không chặn click bên dưới nếu cần */">
                    <div class="spinner-border text-primary" role="status"></div>
                    <div><span style="font-weight:600; color:#A9A9A9;">Đang tải dữ liệu...</span></div>
                </div>

                <!-- Nội dung view con -->
                @RenderBody()
            </div>
        </div>
        <div id="modal-placeholder-chatUser"></div>
        <div id="modal-placeholder"></div>
        <div id="modal-placeholder-notif"></div>
        <div id="notification" class="notification hidden"></div>
    </div>
    <div id="chat-widget" class="chat-window card shadow-lg border-0" style="position:fixed; bottom:20px; right:20px; display:none;">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span id="BuyerName"></span>
            <div class="d-flex align-items-center">
                <!-- Dropdown menu -->
                <div class="dropdown me-2">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="chatDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="chatDropdown">
                        <li><a class="dropdown-item" href="#" onclick="chat.clearChat()">Xóa cuộc trò chuyện</a></li>
                        <li><a class="dropdown-item" href="#" onclick="chat.viewCustomerInfo()">Xem thông tin khách hàng</a></li>
                        <li><a class="dropdown-item" href="#" onclick="chat.markAsRead()">Đánh dấu đã đọc</a></li>
                    </ul>
                </div>
                <button type="button" class="btn-close btn-close-white btn-sm" onclick="chat.toggleChat(4)"></button>
            </div>
        </div>
        <div class="card-body chat-messages" style="height:300px; overflow-y:auto;" data-conversation="">
            <!-- messages sẽ append ở đây -->
        </div>

        <div class="card-footer d-flex">
            <input type="text"
                   id="chat-input-${conversationIdInt}"
                   class="form-control me-2 chat-input"
                   placeholder="Nhập tin nhắn..." />

            <button class="btn btn-primary" onclick="chat.sendMessage()">Gửi</button>
        </div>
    </div> 
    <!-- Container để chứa nhiều chat -->
<div id="chat-widgets-container" style="position:fixed; bottom:20px; right:20px; display:flex; gap:15px;"></div>

    @* <button id="chat-toggle-btn" class="btn btn-primary rounded-circle shadow" style="position: fixed; bottom:20px; right:20px; width:50px; height:50px;" onclick="chat.toggleChat(4)">
        <i class="bi bi-chat-dots"></i>
    </button> *@
    
    <!-- JS Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twbs-pagination/1.4.2/jquery.twbsPagination.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/nouislider@15.7.1/dist/nouislider.min.js"></script>

    <script>
        // Hàm hiển thị / ẩn spinner chung
        window.showGlobalLoading = function (show) {
            const spinner = document.getElementById('globalLoading');
            if (spinner) spinner.style.display = show ? 'block' : 'none';
        };
    </script>
    <!-- SignalR script -->
    <script src="~/js/Admin.js"></script>
    <script src="~/js/ChatAdmin.js"></script>
    <script src="~/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@model ProjectTest1.ViewModels.SearchResultViewModel

<div class="container my-4">
    <h4 class="mb-4">Kết quả tìm kiếm cho: <span class="text-primary">@Model.Keyword</span></h4>

    <div class="row">
        <!-- Sidebar bộ lọc -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Lọc theo giá -->
                    <h6 class="fw-bold mb-3">Lọc theo giá</h6>
                    <form id="priceFilterForm" method="get" class="d-flex flex-column gap-2">
                        <input type="hidden" name="query" value="@Model.Keyword" />

                        <input type="number" name="minPrice" class="form-control" placeholder="Giá từ"
                               value="@Model.MinPrice" />
                        <input type="number" name="maxPrice" class="form-control" placeholder="Giá đến"
                               value="@Model.MaxPrice" />

                        <button type="submit" class="btn btn-primary btn-sm mt-2">Lọc</button>
                    </form>

                    <!-- Danh mục -->
                    @if (Model.Categories != null && Model.Categories.Any())
                    {
                        <hr />
                        <h6 class="fw-bold mb-3">Danh mục</h6>

                        <div id="category-list" class="d-flex flex-column gap-2">
                            @foreach (var cat in Model.Categories)
                            {
                                <div class="form-check">
                                    <input class="form-check-input category-radio"
                                           type="radio"
                                           name="category"
                                           value="@cat.CategoryId"
                                           id="cat_@cat.CategoryId"
                                           @(Model.SelectedCategoryId == cat.CategoryId ? "checked" : "") />

                                    <label class="form-check-label" for="cat_@cat.CategoryId">
                                        @cat.CategoryName
                                    </label>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Kết quả sản phẩm -->
        <div class="col-lg-9 col-md-8">
            <div id="product-list">
                @await Html.PartialAsync("_ProductList", Model.Products)
            </div>
        </div>
    </div>

   
</div>
@section Scripts {
    <script src="~/js/Product.js"></script>
   
}
<style>
    .highlight-review {
        background-color: #fff3cd !important; /* vàng nhạt */
        transition: background-color 0.6s ease;
        border-radius: 6px;
        box-shadow: 0 0 8px rgba(255, 193, 7, 0.6);
    }

</style>
<div class="card mb-3 mx-10">
    <div class="card-header bg-light">
        <strong>Đánh giá sản phẩm</strong>
    </div>
    <div class="card-body px-5">
        <!-- Danh sách comment sẽ do JS load -->
        <div class="comment-list mb-4" id="CommentContent">
            <p class="text-muted">Đang tải đánh giá...</p>
        </div>
            
        <!-- Form nhập comment -->
        <form id="commentForm" style="display:none">
            <input type="hidden" name="ProductVariantId" id="commentProductId" />
            <input type="hidden" name="OrderDetailId" id="commentOrderDetailId" />
            <!-- Tên người dùng -->
            <div class="mb-2">
                <strong>@User.Identity?.Name</strong>
            </div>

            <!-- Bình luận + Đánh giá -->
            <div class="d-flex align-items-start mb-3">
                <textarea id="commentContent" name="Comment" class="form-control me-3 flex-grow-1" rows="3" placeholder="Nhập đánh giá..."></textarea>

                <!-- Rate bên phải -->
                <div class="d-flex flex-column align-items-center">
                    <label class="mb-1">Đánh giá:</label>
                    <select name="Rating" class="form-select" style="min-width:120px;">
                        <option value="5">★★★★★</option>
                        <option value="4">★★★★☆</option>
                        <option value="3">★★★☆☆</option>
                        <option value="2">★★☆☆☆</option>
                        <option value="1">★☆☆☆☆</option>
                    </select>
                </div>
            </div>
            <!-- Nút gửi -->
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
            </div>
        </form>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            Tổng số bản ghi: <strong id="total-review">0</strong>
        </div>
        <div id="pagination">
            <ul id="paging-ul"></ul>
        </div>
    </div>
</div>
<div id="globalLoading" class="text-center mb-3" style="display: none; position: fixed; top: 40%; left: 50%; transform: translate(-50%, -50%); z-index: 9999;">
    <div class="spinner-border text-primary" role="status"></div>
    <div><span>Đang tải dữ liệu...</span></div>
</div>
<style>
    .mx-10 {
        margin-left: 100px !important;
        margin-right: 100px !important;
    }

    .comment-item p {
        margin-bottom: 0.25rem;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const hash = window.location.hash;
        if (hash === "#commentForm") {
            const el = document.querySelector(hash);
            if (el) {
                el.style.display = "block"; // Hiện form
                el.scrollIntoView({ behavior: "smooth", block: "start" });

                const textarea = el.querySelector("textarea");
                if (textarea) textarea.focus();
            }
        }
    });
</script>

@section Scripts {
    <script src="~/js/Review.js"></script>

}

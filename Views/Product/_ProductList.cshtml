@model IEnumerable<ProjectTest1.Models.ProductModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center">
        😢 Không tìm thấy sản phẩm nào phù hợp.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <a href="@Url.Action("Detail", "Products", new { id = item.Id })">
                        <img src="@item.Img"
                             class="card-img-top img-fluid"
                             alt="@item.Name"
                             style="height:200px; object-fit:cover;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate">@item.Name</h6>
                        <p class="text-danger fw-bold mb-2">
                            @(item.Price?.ToString("N0") ?? "0") đ
                        </p>

                        <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@item.Id"
                           class="btn btn-primary btn-sm mt-auto w-100">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
